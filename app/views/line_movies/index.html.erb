<p id="notice"><%= notice %></p>

<h1>Line Movies</h1>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_movies.each do |line_movie| %>
      <tr>
        <td><%= line_movie.movie_id %></td>
        <td><%= line_movie.cart_id %></td>
        <td><%= link_to 'Show', line_movie %></td>
        <td><%= link_to 'Edit', edit_line_movie_path(line_movie) %></td>
        <td><%= link_to 'Destroy', line_movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Line Movie', new_line_movie_path %>
