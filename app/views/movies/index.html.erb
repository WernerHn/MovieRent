<!-- TABLA MOVIES -->
<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Cover</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>


    <% @movies.each do |movie| %>
      <tr>
        <td><h3><%= movie.title %></h3></td>
        <td> <%= movie.description %></td>
        <td><%= image_tag movie.image_url.to_s, width: '40%' if movie.image_url.to_s.present? %></td>
        <td>$<%= movie.price %></td>
        <td><%= link_to 'Details', movie, remote: true %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= button_to 'Add to Cart', line_movies_path(movies_id: movie) %></td>
        <td><%= link_to 'Eliminate', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>


</table>

<br>

<%= link_to 'New Movie', new_movie_path %><br>


<%= link_to 'News', new_movie_path, remote: true %>

