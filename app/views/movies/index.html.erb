<!-- TABLA MOVIES -->
<div class="container-fluid">
  <h1 class="text-center">Movies</h1>


  <div class="row">
    <% @movies.each do |movie| %>
        <div class="col-sm-4">

          <div class="row">
            <div class="col-xs-9"><h3><%= movie.title %></h3></div>
            <div class="col-xs-3"><h3>$<%= movie.price %></h3></div>
          </div>


          <div class="col-lg-12" >
            <div class="col-xs-12" >
              <%= link_to image_tag( movie.image_url.to_s, width: '100%', class:"img" ), movie  %>
            </div>
          </div>

          <div align="center"><%= link_to 'Details', movie %></div>
        </div>
    <% end %>
  </div>

</div>

<div id="task-form" style="display:none;"></div>
<div align="center"><%= link_to 'New Movie', new_movie_path, remote: true %></div>




