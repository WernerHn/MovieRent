<% javascript_include_tag 'make_a_rent.js' %>

<table>
  <div><h2>Your Cart</h2></div>
  <%= render(cart.line_movies) %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
  <tr>
    <td><%= button_to 'Empty cart', cart, method: :delete,
                      confirm: 'Are you sure?' %></td>
    <td></td>
    <td><button id="js-cart-finish">Make a rent</button></td>
  </tr>
</table>