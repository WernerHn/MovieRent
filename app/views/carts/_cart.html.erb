<div class="cart_finished", id="js-cart-finish" style="display:none;"></div>
<table>
  <div>Your Cart</div>
  <%= render(cart.line_movies) %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
  <tr>
    <td><%= button_to 'Empty cart', cart, method: :delete,
                  confirm: 'Are you sure?' %></td>

    <td><%= link_to 'finish', carts_message_path, remote: true %></td>
  </tr>
</table>

