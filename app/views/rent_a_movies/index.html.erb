
<%= render current_cart %>
<h1>Movies</h1>
<div id="cart"></div>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Cover</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>


  <% @movies.each do |movie| %>
      <tr>
        <td class="title"><h3><%= movie.title %></h3></td>
        <td> <%= movie.description %></td>
        <td><%= image_tag movie.image_url.to_s, width: '40%' if movie.image_url.to_s.present? %></td>
        <td>$<%= movie.price %></td>
        <td><%= button_to 'Add to Cart', line_movies_path(movies_id: movie) %></td>

      </tr>
  <% end %>
</table>

<%= link_to 'New Movie', new_movie_path %>